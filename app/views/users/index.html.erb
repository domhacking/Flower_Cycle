<div class = "suppliers_page">
  <h3>Our flower suppliers</h3>
  <div class = "supplier">
    <% @users.each do |user| %>
      <% if user.role == "Supplier" %>
        <div class = "eachsupplier">
          <td><%= link_to image_tag(user.user_image.thumb.url), user.user_image.detail.url %></td><br>
          <td><%= user.company_name %></td><br>
          <td></a><%= user.website %></td><br>
          <td></a><%= user.email %></td><br>
          <td><%= user.contact_number %></td><br>
          <% end %>
        </div>
    <% end %>
  </div>  
</div>
  